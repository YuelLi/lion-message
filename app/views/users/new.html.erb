        <div class="form-group">
          <%= text_field_tag :username,"", class: "form-control input-lg", placeholder: "username" %>
        </div>
        <div class="form-group">
          <%= password_field_tag :password,"", class: "form-control input-lg",placeholder: "password"%>
        </div>
        <div class="form-group">
          <%= submit_tag "submit", class: "btn btn-primary btn-lg btn-block"%>
          <%= link_to '/login' do %>
            <span class="pull-right">Login</span>
          <% end %>
<!--          <span><a href="#">Need help?</a></span>-->
        </div>
      <%end%>
