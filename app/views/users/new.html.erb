<% if flash[:alert] %>
  <div class="alert alert-danger">
    <span class="error"><%= flash[:alert] %></span>
  </div>
<% end %>
<div id="loginModal" class="modal show" style="margin-top:100px;" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div align="center">
      <img src="<%= asset_path("logo.jpg") %>"/>
    </div>
    <div class="modal-header">
      <h1 class="text-center">Sign Up</h1>
    </div>
    <div class="modal-body">
      <%= form_tag '/users/create',({:class => 'form col-md-12 center-block'}) do%>
        <div class="form-group">
          <%= text_field_tag :username,"", class: "form-control input-lg", placeholder: "username" %>
        </div>
        <div class="form-group">
          <%= password_field_tag :password,"", class: "form-control input-lg",placeholder: "password"%>
        </div>
        <div class="form-group">
          <%= select_tag "department", options_from_collection_for_select(@departments, "name", "name",""), {:include_blank => '', :class => "form-control" }%>
        </div>
        <div class="form-group">
          <%= submit_tag "submit", class: "btn btn-primary btn-lg btn-block"%>
          <%= link_to '/login' do %>
            <span class="pull-right">Login</span>
          <% end %>
        </div>
      <%end%>
    </div>
  </div>
</div>