<h1>Post#show</h1>
<p>Find me in app/views/post/show.html.erb</p>

<table>
  <thead>
    <tr>
      <th>Topic</th>
      <th>Department</th>
      <th>Subject</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| -%>
      <tr>
        <th><%= post.topic %></th>
        <th><%= post.department %></th>
        <th><%= post.subject %></th>
        <th><%= post.body %></th>
      </tr>
    <% end %>
  </tbody>
</table>

<%= button_to "Create a new post", '/post/new', method: :get%>