<div class="container">
  <% if flash[:alert] %>
    <div class="alert alert-danger"  style="text-align: center;">
      <span class="error"><%= flash[:alert] %></span>
    </div>
  <% end %>
  <div class="row align-items-center">
    <div class="col-sm-8 col-sm-offset-2 col-md-8 col-md-offset-2">

      <div class="panel panel-primary">

        <div class="panel-heading">Enter Content of Reply</div>

        <div style="padding: 25px">
          <%= form_tag post_replies_path(@post), :class => "form-horizontal center" do %>
            <div class="form-group">
              <%= label_tag :content %>
              <%= text_area_tag :content,"" , class: "form-control" %>
            </div>
            <%= submit_tag "Send", :class => "btn btn-primary" %>
            <%= link_to "Cancel", post_replies_path(@post), :class => "btn btn-primary" %>
          <%end%>
        </div>

      </div>
    </div>
  </div>
</div>

<script>
$("#topic").change(function() {
    if ($(this).data('options') === undefined) {
        /*Taking an array of all options-2 and kind of embedding it on the select1*/
        $(this).data('options', $('#department option').clone());
    }
    var id = $(this).val();
    var department_name;
    switch(id) {
        case "":
            department_name = "";
            break;
        case "Course":
            department_name = "<%= @user_department %>"
            break;
        case "Finance":
            department_name = "Columbia Finance"
            break;
        case "Visa":
            department_name = "ISSO"
            break;
    }
    $("#department").val(department_name);

});
</script>