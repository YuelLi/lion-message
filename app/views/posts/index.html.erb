<div class="container">
  <div class="row align-items-center">
    <div class="col-sm-8 col-sm-offset-2 col-md-8 col-md-offset-2 main">
      <div class="panel panel-primary">
        <div class="panel-heading"><%= current_user.username %>'s Posts</div>
        <table class="table table-striped">
          <thead>
            <tr class="bg-info">
              <th>Topic</th>
              <th>
                <%= link_to "Department", posts_path({:post_content => @post_content, :sort => "department"}),id: "release_date_header",
                            class: (params[:sort]=='department'?'text-warning':'')%>
              </th>
              <th>Subject</th>
              <th>
                <%= link_to "Create time", posts_path({:post_content => @post_content, :sort => "create_time"}),id: "release_date_header",
                            class: (params[:sort]=='create_time'?'text-warning':'')%>
              </th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| -%>
              <tr>
                <th><%= post.topic %></th>
                <th><%= post.department %></th>
                <th><%= post.subject %></th>
                <th>
                  <div style="float:left;"><%= post.created_at%></div>
                  <%= button_to "Detail", post_path(post), method: :get, style: "float:right;" %>
                </th>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <%= button_to "Create a new posts", new_post_path, method: :get, :class => 'btn btn-primary'%>
    </div>
  </div>
</div>